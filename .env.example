# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/practice_hub"

# Better Auth
BETTER_AUTH_SECRET="your-secret-key-here"
BETTER_AUTH_URL="http://localhost:3000"
NEXT_PUBLIC_BETTER_AUTH_URL="http://localhost:3000"

# Microsoft OAuth
MICROSOFT_CLIENT_ID="your-microsoft-client-id-here"
MICROSOFT_CLIENT_SECRET="your-microsoft-client-secret-here"

# S3 Storage (MinIO for local development)
S3_ENDPOINT="http://localhost:9000"
S3_ACCESS_KEY_ID="minioadmin"
S3_SECRET_ACCESS_KEY="minioadmin"
S3_BUCKET_NAME="practice-hub-proposals"
S3_REGION="us-east-1"

# Application URL (for PDF links)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Resend Email
RESEND_API_KEY="re_your_api_key"
RESEND_FROM_EMAIL="proposals@innspiredaccountancy.com"
RESEND_TEAM_EMAIL="team@innspiredaccountancy.com"

# DocuSeal E-Signature
DOCUSEAL_API_KEY="your-docuseal-api-key"
DOCUSEAL_HOST="http://localhost:3030"
DOCUSEAL_SECRET_KEY="generate-with-openssl-rand-base64-32"
DOCUSEAL_WEBHOOK_SECRET="generate-with-openssl-rand-base64-32"

# Google AI (Gemini 2.0 Flash) - for document extraction
GOOGLE_AI_API_KEY="your-google-ai-api-key"

# LEM Verify KYC/AML
LEMVERIFY_API_KEY="your-lemverify-api-key"
LEMVERIFY_ACCOUNT_ID="your-lemverify-account-id"
LEMVERIFY_API_URL="https://api.lemverify.com/v1"
LEMVERIFY_WEBHOOK_SECRET="your-webhook-secret-from-lemverify"

# Sentry Error Tracking
# Get these from https://sentry.io/settings/practice-hub/projects/practice-hub/keys/
NEXT_PUBLIC_SENTRY_DSN=""
NEXT_PUBLIC_SENTRY_ENVIRONMENT="development"
# Auth token for uploading source maps (optional but recommended)
SENTRY_AUTH_TOKEN=""
SENTRY_ORG=""
SENTRY_PROJECT="practice-hub"