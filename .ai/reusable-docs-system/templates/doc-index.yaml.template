# Documentation Index Template
# Complete knowledge graph mapping concepts to documentation files
#
# CUSTOMIZATION INSTRUCTIONS:
# 1. Replace PROJECT_NAME with your project name
# 2. Add your project's concepts (features, components, modules)
# 3. Map concepts to your documentation files
# 4. Remove unused domains (prd, stories, qa-gates if not applicable)
# 5. Add keywords for better search

concepts:
  # ============================================================================
  # EXAMPLE: CORE FEATURES (customize for your project)
  # ============================================================================

  authentication:
    description: "User authentication, sessions, authorization"
    # API reference documentation
    api:
      - path: "docs/reference/typescript/modules/auth.md"
        description: "Auth module TypeScript API"
      - path: "docs/reference/python/src/auth/"
        description: "Auth service Python API"
    # Architecture documentation
    architecture:
      - path: "docs/architecture/auth-system.md"
        description: "Authentication system design"
      - path: "docs/architecture/security.md"
        section: "Authentication"
    # Coding patterns
    patterns:
      - path: "docs/patterns/auth-patterns.md"
        description: "Authentication implementation patterns"
    # Keywords for search
    keywords: ["auth", "authentication", "login", "session", "oauth", "jwt", "security"]

  database-models:
    description: "Database schema, ORM models, migrations"
    api:
      - path: "docs/reference/python/src/models/"
        description: "ORM models"
      - path: "docs/reference/typescript/modules/types.md"
        description: "Type definitions"
    architecture:
      - path: "docs/architecture/database-schema.md"
        description: "Database design"
      - path: "docs/architecture/data-models.md"
        description: "Entity-relationship model"
    keywords: ["database", "model", "schema", "migration", "ORM", "SQL"]

  api-endpoints:
    description: "REST API endpoints, request/response"
    api:
      - path: "docs/reference/python/src/routes/"
        description: "API route handlers"
      - path: "docs/reference/typescript/modules/api-client.md"
        description: "API client"
    architecture:
      - path: "docs/architecture/api-specification.md"
        description: "REST API design"
    keywords: ["API", "endpoint", "REST", "route", "request", "response"]

  # ============================================================================
  # EXAMPLE: ARCHITECTURAL CONCEPTS (customize for your project)
  # ============================================================================

  tech-stack:
    description: "Technology selections, frameworks, libraries"
    architecture:
      - path: "docs/architecture/tech-stack.md"
        description: "Complete technology stack"
    keywords: ["tech", "technology", "stack", "framework", "library"]

  coding-standards:
    description: "Code style, conventions, best practices"
    patterns:
      - path: "docs/patterns/coding-standards.md"
        description: "Coding conventions"
      - path: "docs/patterns/best-practices.md"
        description: "Best practices guide"
    keywords: ["coding", "standard", "convention", "style", "best-practice"]

  # ============================================================================
  # OPTIONAL: PRD & REQUIREMENTS (remove if not applicable)
  # ============================================================================

  # Uncomment if you have PRD documentation
  # mvp-scope:
